<% if @name %>
  <h1> "My name is <%= @name %>" </h1>
  <div>
    <img src='http://bit.ly/1eze8aE' style='border: 3px dashed red'>
  </div>
<% end %>

<% if !@name %>
  <h1> "I don't have a name yet!" </h1>
  <div>
    <img src='http://bit.ly/1eze8aE' style='border: 3px dashed red'>
  </div>
  <form action="/named-cat" method="post">
    <input type="text" name="name">
    <input type="submit" value="Submit">
  </form>
<% end %>
